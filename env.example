# Java Backend Integration Environment Variables
# Copy this file to .env.local and update the values

# Java Backend API Configuration
NEXT_PUBLIC_API_BASE_URL=http://localhost:8080/api
NEXT_PUBLIC_JAVA_BACKEND_URL=http://localhost:8080

# Java Backend Specific Settings
NEXT_PUBLIC_JAVA_API_VERSION=v1
NEXT_PUBLIC_JAVA_TIMEOUT=10000

# Authentication (JWT Token)
NEXT_PUBLIC_JWT_SECRET=your-jwt-secret-here
NEXT_PUBLIC_JWT_EXPIRY=86400

# CORS Settings for Java Backend
NEXT_PUBLIC_CORS_ORIGIN=http://localhost:3000

# File Upload Settings (Java handles file size limits)
NEXT_PUBLIC_MAX_FILE_SIZE=10485760

# Database Connection (if needed for Java integration)
NEXT_PUBLIC_DATABASE_URL=jdbc:mysql://localhost:3306/ecommerce

# Java Application Properties
NEXT_PUBLIC_JAVA_APP_NAME=EcommerceBackend
NEXT_PUBLIC_JAVA_APP_VERSION=1.0.0

# Development Settings
NODE_ENV=development
NEXT_PUBLIC_DEBUG_MODE=true
